{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "payments",
      "required": true
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "CASH",
        "CARD",
        "VOUCHER",
        "MISC",
        "COMP"
      ],
      "default": "CASH",
      "required": true
    },
    "amount_cents": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "PENDING",
        "AUTHORIZED",
        "SETTLED",
        "FAILED",
        "VOID"
      ],
      "default": "SETTLED",
      "required": true
    },
    "meta": {
      "type": "json"
    },
    "allocations": {
      "type": "component",
      "repeatable": true,
      "component": "payment.allocation"
    }
  }
}
